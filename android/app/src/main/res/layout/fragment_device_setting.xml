<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.snaptechnology.bgonzalez.bookmyroomandroid.activity.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="32dp"
            android:text="Device Setting"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_below="@id/label"
            android:layout_centerInParent="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_size_text"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="Room name"
            android:id="@+id/textView2" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/small_size_text"
            android:layout_below="@+id/textView2"
            android:layout_centerInParent="true"
            android:layout_marginTop="23dp" />

        <Button android:id="@+id/btn_update_device_setting"
            android:layout_below="@+id/location"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_update_device_setting"
            android:background="@color/colorPrimary"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white" />
    </RelativeLayout>




</RelativeLayout>