<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/lable_title_book_meeting">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Book Room"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"/>

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="20dp"
            android:id="@+id/input_layout_name"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lable_title_book_meeting">

            <EditText
                android:id="@+id/input_name"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Meeting name"
                android:layout_width="200dp"
                android:layout_centerHorizontal="true"/>
        </android.support.design.widget.TextInputLayout>


        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/spinner_time_book"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Meeting time"
            app:met_floatingLabel="normal"
            android:textColorHint="#CFD8DC"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@id/input_layout_name"
            android:layout_centerHorizontal="true" />

        <Button android:id="@+id/btn_save_device_setting"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="@string/btn_save_device_setting"
            android:background="@color/colorPrimary"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/white"
            android:layout_below="@id/spinner_time_book"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"/>

    </RelativeLayout>


</LinearLayout>